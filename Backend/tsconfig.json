{
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true,
      "target": "ES6",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "lib": [
      "es2020",
      "dom"
    ]
  }