{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ES5",
    "lib": ["dom", "es2020", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true, 
    "composite": true,
    "noEmit": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["cypress", "node_modules"]
}
